<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="display_settings"
        android:title="@string/pref_header_display_settings" >
        <Preference
            android:key="size"
            android:title="@string/pref_title_resolution" >
        </Preference>

        <EditTextPreference
            android:defaultValue="reset"
            android:inputType="number"
            android:key="density"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_dpi" />

        <Preference
            android:key="overscan_settings"
            android:title="@string/pref_title_overscan_settings" >
        </Preference>

        <ListPreference
            android:defaultValue="do-nothing"
            android:entries="@array/pref_immersive_list"
            android:entryValues="@array/pref_immersive_list_values"
            android:key="immersive_new"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_title_immersive" />
        <ListPreference
            android:defaultValue="do-nothing"
            android:entries="@array/pref_rotation_list"
            android:entryValues="@array/pref_rotation_list_values"
            android:key="rotation_lock_new"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_title_rotation" />
        <ListPreference
            android:defaultValue="do-nothing"
            android:entries="@array/pref_ui_refresh_list"
            android:entryValues="@array/pref_ui_refresh_list_values"
            android:key="ui_refresh"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_title_ui_refresh" />
        <ListPreference
            android:defaultValue="do-nothing"
            android:entries="@array/pref_screen_timeout_list"
            android:entryValues="@array/pref_screen_timeout_list_values"
            android:key="screen_timeout"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_title_screen_timeout" />
        <ListPreference
            android:defaultValue="landscape"
            android:entries="@array/pref_hdmi_rotation_list"
            android:entryValues="@array/pref_hdmi_rotation_list_values"
            android:key="hdmi_rotation"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_title_hdmi_rotation" />
    </PreferenceCategory>

</PreferenceScreen>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/turnOffTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@null"
                android:textSize="16sp"
                android:textColor="@color/text_color_primary" />

            <TextView
                android:id="@+id/adb_shell_command"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="@dimen/adb_shell_command"
                android:textColor="@color/text_color_primary"
                android:fontFamily="monospace"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|end"
        android:padding="16dp"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/turnOffCheckbox"
            android:layout_width="match_parent"
            android:checked="false"
            android:text="@string/dont_show_again"
            android:textSize="15sp"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/action_close"
                android:gravity="bottom|end"
                android:textColor="@color/close_button"
                android:id="@+id/turnOffButtonSecondary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:background="@android:color/transparent"
                android:text="@string/action_turn_off"
                android:gravity="bottom|end"
                android:textColor="@color/close_button"
                android:id="@+id/turnOffButtonPrimary" />

            </LinearLayout>

    </LinearLayout>

</LinearLayout>
